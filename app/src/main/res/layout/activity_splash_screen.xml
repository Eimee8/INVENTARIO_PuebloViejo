<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pv"
        android:layout_width="259dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="-100dp"
        android:gravity="center"
        android:text="PUEBLO VIEJO"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/escudo"
        android:layout_width="wrap_content"
        android:layout_height="406dp"
        android:layout_below="@+id/pv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="191dp"
        android:src="@drawable/escudo" />

    <TextView
        android:id="@+id/gobmuni"
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_below="@+id/escudo"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-150dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:text="GOBIERNO MUNICIPAL"
        android:textColor="@color/black"
        android:textSize="45dp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/gobmuni"
        android:layout_marginStart="178dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="46dp" />


</RelativeLayout>