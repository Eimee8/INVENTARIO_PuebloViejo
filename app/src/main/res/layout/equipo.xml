<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="850dp"
    android:layout_height="40dp"
    android:layout_marginVertical="2dp"
    android:background="@drawable/border_black"
    android:padding="3dp">

    <TextView
        android:id="@+id/status_equipo"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="Estatus"
        android:textSize="14sp"
        android:background="@drawable/border_right"
        android:textAlignment="center"
        />

     <TextView
         android:id="@+id/TipoEquipo"
         android:layout_width="140dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:layout_marginRight="5dp"
         android:text="Tipo"
         android:textSize="14sp"
         android:background="@drawable/border_right"
         android:textAlignment="center"
         />

    <TextView
        android:id="@+id/marcaEquipo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="Marca"
        android:textSize="14sp"
        android:background="@drawable/border_right"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/numSerie"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="serie"
        android:textSize="14sp"
        android:background="@drawable/border_right"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/nomArea"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="Area"
        android:textSize="14sp"
        android:background="@drawable/border_right"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/Fecha"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="Fecha"
        android:textSize="14sp"
        android:background="@drawable/border_right"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/propietarioEquipo"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="propietario"
        android:textSize="14sp"
        android:background="@drawable/border_right"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/reciclaje"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/reciclaje"/>

</LinearLayout>